              %h4 
                %i.fa.fa-code
                Applications
              %ul.list-group
                %li.list-group-item
                  %a{ :href=>"https://hub.openshift.com",:title=>"The OpenShift Hub"} 
                    %i.fa.fa-star
                    OpenShift Application Hub
                %li.list-group-item
                  %a{ :href=>"http://origin.ly", :title=>"The Origin.ly Project Index"}
                    %i.fa.fa-rocket
